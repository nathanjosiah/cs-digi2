<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="590" Width="550" ResizeMode="NoResize">
    <Grid x:Name="grid" Background="#FFA0A0A0" >
        <StackPanel Background="White" HorizontalAlignment="Left" VerticalAlignment="Top">
            
        <Image x:Name="image" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  MouseDown="Grid_MouseDown" MouseMove="Grid_MouseMove" MouseUp="Grid_MouseUp" Width="512" Height="512"/>
        </StackPanel>
        <Slider Margin="0,0,0,11" VerticalAlignment="Bottom" MinWidth="3" Minimum="1" Maximum="365" ValueChanged="Slider_ValueChanged"/>
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="424,428,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
